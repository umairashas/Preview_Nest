<style>
  .container {
    max-width: 600px;
    margin: 20px auto;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  }

  h3 {
    text-align: center;
    margin-bottom: 20px;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  .list-group-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin-bottom: 5px;
    background-color: #f9f9f9;
  }

  .folder-link {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
  }

  .folder-link:hover {
    text-decoration: underline;
  }

  .badge {
    background: #007bff;
    color: white;
    padding: 5px 10px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
  }
</style>

<div class="container">
  <h3>Folders</h3>
  <ul>
    <% @folders.each do |folder| %>
      <li class="list-group-item">
        <%= link_to folder.name, folder_path(folder), remote: true, class: "folder-link" %>
        <span class="badge">Go</span>
      </li>
    <% end %>
  </ul>
</div>
